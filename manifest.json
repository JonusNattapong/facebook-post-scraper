{
  "manifest_version": 3,
  "name": "Facebook Post Scraper",
  "version": "1.2.0",
  "description": "Extract Facebook posts with complete data for AI training datasets",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "image/icon/icon16.png",
      "48": "image/icon/icon48.png",
      "128": "image/icon/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["src/js/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/js/background.js"
  },
  "icons": {
    "16": "image/icon/icon16.png",
    "48": "image/icon/icon48.png",
    "128": "image/icon/icon128.png"
  }
}